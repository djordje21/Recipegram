<%= simple_form_for @recipe, :html => {:multipart => true}  do |f| %>
  <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select a Category") %>
  <%= f.file_field :recipe_img %>
  <%= f.input :title, label: "Recipe Title" %>
  <%= f.input :description %>
  <%= f.input :author %>
  <%= f.button :submit %>
<% end %>